<% layout('/layouts/boilerplate') -%>

    <div class="row mt-3">
        <div class="col-8 offset-3">
            <H3>Listing Details</H3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.title %> <br>
                        <%= listing.description %> <br>
                            &#8377; <%= listing.price?listing.price.toLocaleString("en-IN") :0%> <br>
                                <!-- inbuilt function for putting commas -->
                                <%= listing.location %> <br>
                                    <%= listing.country %>
                </p>
            </div>
        </div>
        <br>
    </div>
    <div class="mb-3  offset-3" style="display: flex;">
        <div class="special">
            <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>
        </div>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE"><br>
            <button class="btn btn-dark  ">Delete</button>
        </form>
    </div>